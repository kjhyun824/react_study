{
  "parser": "@babel/parser",
  "plugins": ["@babel-eslint", "eslint-snake-case", "promise-catch"],
  "env": {
    "es6": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:jsx-a11y/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:@typescript-eslint/recommended",
    "prettier/@babel-eslint",
    "plugin:prettier/recommended",
    "prettier/@babel-eslint",
    "prettier/react",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "lines-between-class-members": [
      "error",
      "always",
      { "exceptAfterSingleLine": true }
    ],
    "import/extensions": ["warning", {
      "ts": "never"
    }],
    "no-unused-expressions": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "operator-linebreak": "off",
    "default-case": "off",
    "no-fallthrough": "off",
    "@babel-eslint/no-non-null-assertion": "off",
    "function-paren-newline": "off",
    "implicit-arrow-linebreak": "off",
    "class-methods-use-this": "off",
    "@babel-eslint/no-unused-expressions": "off",
    "comma-dangle": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "@babel-eslint/no-explicit-any": "off",
    "no-underscore-dangle": "off",
    "camelcase": "off",
    "@babel-eslint/camelcase": "off",
    "prettier/prettier": ["error"],
    "react/jsx-max-props-per-line": [1, { "when": "multiline" }]
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "rules": {
        "@babel-eslint/explicit-function-return-type": "off"
      }
    }
  ]
}
